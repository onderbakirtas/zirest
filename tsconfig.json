{
	"compilerOptions": {
		"lib": ["ESNext"],
		"types": ["@girs/gjs", "@girs/adw-1", "@girs/gtk-4.0", "@girs/soup-3.0"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true
	},
	"include": ["main.ts", "src/**/*.ts", "src/**/*.d.ts"]
}